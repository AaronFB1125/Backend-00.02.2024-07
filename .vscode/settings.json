{
    "workbench.colorCustomizations": {
        "editor.background": "#0c0c0c", // Fondo del editor (gris oscuro)
        "editor.foreground": "#d4d4d4", // Texto principal (gris claro)
        "editorCursor.foreground": "#424242", // Cursor (gris claro)
        "editor.lineHighlightBackground": "#2c2c2c", // Resaltado de la línea actual (gris oscuro)
        "editor.selectionBackground": "#264f78", // Fondo de la selección (azul oscuro)
        "editor.selectionHighlightBackground": "#3e4451", // Resaltado de la selección (gris azulado)
        "editor.wordHighlightBackground": "#575757", // Resaltado de la palabra (gris medio)
        "editorIndentGuide.activeBackground": "#c5c5c5", // Guía de indentación activa (gris claro)
        "editorIndentGuide.background": "#404040" // Guía de indentación (gris oscuro)
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "comment",
                "settings": {
                    "foreground": "#41b40c" // Comentarios (verde)
                }
            },
            {
                "scope": "string",
                "settings": {
                    "foreground": "#0a8a43" // Cadenas de texto (marrón claro)
                }
            },
            {
                "scope": "constant.numeric",
                "settings": {
                    "foreground": "#e6224d" // Números (verde claro)
                }
            },
            {
                "scope": "variable",
                "settings": {
                    "foreground": "#fcfdfd" // Variables (azul claro)
                }
            },
            {
                "scope": "keyword",
                "settings": {
                    "foreground": "#0751dbef" // Palabras clave (azul)
                }
            },
            {
                "scope": "storage",
                "settings": {
                    "foreground": "#fdfdfdef" // Palabras clave de almacenamiento (púrpura claro)
                }
            },
            {
                "scope": "entity.name.function",
                "settings": {
                    "foreground": "#da0d06" // Nombres de funciones (amarillo claro)
                }
            },
            {
                "scope": "variable.parameter",
                "settings": {
                    "foreground": "#f9fafa" // Parámetros (azul claro)
                }
            }
        ]
    }
}
